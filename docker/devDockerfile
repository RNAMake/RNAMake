FROM centos:8 as build

# Get all build files
RUN     dnf -y --disablerepo '*' --enablerepo=extras swap centos-linux-repos centos-stream-repos
RUN     dnf -y distro-sync
RUN     dnf -y install scl-utils scl-utils-build git python3 'dnf-command(config-manager)'
RUN     dnf config-manager --enable powertools
RUN     dnf install -y gcc-toolset-9 ninja-build cmake
RUN     dnf install -y -q glibc-static
RUN     dnf makecache
RUN     dnf -y groupinstall "Development Tools"

SHELL ["/usr/bin/scl", "enable", "gcc-toolset-9"]

# Build RNAMake
RUN mkdir /RNAMake
ADD . /RNAMake
ENV RNAMAKE=/RNAMake
ENV X3DNA=$RNAMAKE/resources/x3dna/linux
WORKDIR /RNAMake/cmake/build/
RUN python3 ../make_project.py -target linux
RUN cmake -G Ninja
RUN ninja
RUN chmod +x ./*
# Prepare test dat for evaluation in Linux
RUN sed -i.bak 's/\r$//' /RNAMake/unittests/unittest_resources/base/path/test.csv
